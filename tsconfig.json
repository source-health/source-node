{
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./generator/**/*.ts", "jest.config.ts", "./@types/**/*.d.ts" ],
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES6",
    "typeRoots": ["node_modules/@types", "./@types"]
  }
}
